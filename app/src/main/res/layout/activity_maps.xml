<?xml version="1.0" encoding="utf-8"?>

<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">


    <fragment
        android:id="@+id/map"
        class="com.google.android.gms.maps.SupportMapFragment"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginTop="16dp"
        app:layout_constraintTop_toTopOf="parent"
        tools:layout_editor_absoluteX="-9dp" />

    <TextView
        android:id="@+id/Title"
        android:layout_width="248dp"
        android:layout_height="84dp"
        android:layout_marginTop="16dp"
        android:gravity="center"
        android:shadowColor="#CF6F0A"
        android:shadowDx="20"
        android:shadowDy="20"
        android:shadowRadius="10"

        android:text="HIKER'S WATCH"
        android:textColor="#FFFFFF"
        android:textSize="34dp"
        android:textStyle="bold|italic"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/Latitude"
        android:layout_width="0dp"
        android:layout_height="68dp"
        android:layout_marginStart="10dp"
        android:layout_marginTop="140dp"
        android:layout_marginEnd="10dp"
        android:shadowColor="#0B0B0A"
        android:shadowDx="10"

        android:shadowDy="10"
        android:shadowRadius="10"
        android:text="LATITUDE: 23.4343432"
        android:textColor="#00FFB7"
        android:textSize="36dp"
        android:textStyle="bold|italic"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/Longitude"
        android:layout_width="0dp"
        android:layout_height="68dp"
        android:layout_marginStart="10dp"
        android:layout_marginTop="224dp"
        android:layout_marginEnd="10dp"
        android:shadowColor="#0B0B0A"
        android:shadowDx="10"
        android:shadowDy="10"

        android:shadowRadius="10"
        android:text="LATITUDE: 23.4343432"
        android:textColor="#00FFB7"
        android:textSize="36dp"
        android:textStyle="bold|italic"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/Altitude"
        android:layout_width="0dp"
        android:layout_height="68dp"
        android:layout_marginStart="10dp"
        android:layout_marginTop="312dp"
        android:layout_marginEnd="10dp"
        android:shadowColor="#0B0B0A"
        android:shadowDx="10"
        android:shadowDy="10"

        android:shadowRadius="10"
        android:text="LATITUDE: 23.4343432"
        android:textColor="#00FFB7"
        android:textSize="36dp"
        android:textStyle="bold|italic"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/Accruacy"
        android:layout_width="0dp"
        android:layout_height="68dp"
        android:layout_marginStart="10dp"
        android:layout_marginTop="396dp"
        android:layout_marginEnd="10dp"
        android:shadowColor="#0B0B0A"
        android:shadowDx="10"
        android:shadowDy="10"

        android:shadowRadius="10"
        android:text="LATITUDE: 23.4343432"
        android:textColor="#00FFB7"
        android:textSize="36dp"
        android:textStyle="bold|italic"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/Address"
        android:layout_width="391dp"
        android:layout_height="157dp"
        android:layout_marginStart="10dp"
        android:layout_marginTop="480dp"
        android:layout_marginEnd="10dp"
        android:shadowColor="#0B0B0A"
        android:shadowDx="10"
        android:shadowDy="10"

        android:shadowRadius="10"
        android:text="ADDRESS:"
        android:textColor="#00FFB7"
        android:textSize="36dp"
        android:textStyle="bold|italic"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/gdButton"
        android:layout_width="387dp"
        android:layout_height="65dp"
        android:layout_alignParentStart="true"
        android:layout_centerHorizontal="true"
        android:layout_marginStart="2dp"
        android:layout_marginEnd="10dp"
        android:layout_marginBottom="16dp"
        android:onClick="GDBUTTON"
        android:shadowColor="#FF0000"
        android:shadowDx="5"
        android:shadowDy="5"
        android:shadowRadius="5"
        android:text="GET DETAILS"
        android:textAlignment="center"
        android:textColor="#000000"
        android:textSize="30dp"
        android:textStyle="bold|italic"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />


</androidx.constraintlayout.widget.ConstraintLayout>